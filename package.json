  "license": "MIT",
  "scripts": {
    "bundle": "jspm bundle-sfx index.js ./public/js/bundle-sfx.js -m",
    "coverage": "istanbul cover _mocha -x app/model.js --  --compilers js:babel-core/register --recursive -r jsdom-global/register",
    "example": "npm run bundle && PORT=3001 nodemon server.js",
    "postinstall": "jspm install",
    "start": "npm run bundle && node server.js",
    "test": "mocha --compilers js:babel-core/register --recursive -r jsdom-global/register"
  },
  "dependencies": {
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "falcor": "^0.1.17",
    "falcor-http-datasource": "^0.1.3",
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.1",
    "enzyme": "^2.4.1",
    "express": "^4.14.0",
    "falcor-express": "^0.1.2",
    "falcor-router": "^0.4.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom-global": "^2.1.0",
    "jspm": "^0.16.45",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "sinon": "^1.17.5"
  },
  "jspm": {
    "directories": {
      "baseURL": "app"
    },
    "dependencies": {
      "falcor": "npm:falcor@^0.1.17",
      "falcor-http-datasource": "npm:falcor-http-datasource@^0.1.3",
