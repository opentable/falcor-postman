{
  "name": "falcor-postman",
  "version": "1.2.0",
  "description": "A graphical interactive in-browser Falcor queries validator IDE.",
  "main": "falcor-postman.js",
  "author": {
    "name": "big-mars Team",
    "email": "big-mars-team@opentable.com"
  },
  "contributors": [
    {
      "name": "Nick Balestra",
      "email": "nbalestra@opentable.com"
    },
